{
  "name": "node-ci-cd-project",
  "version": "1.0.0",
  "description": "Node.js project with CI/CD pipeline and MongoDB Atlas",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --verbose --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage --coverageReporters=text-lcov > lcov.info",
    "lint": "eslint src tests --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src tests --ext .js,.jsx,.ts,.tsx --fix",
    "build": "echo 'No build step defined'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0"
  }
}